<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/lego_color_white"
    tools:targetApi="lollipop">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lego_color_black" />
            <corners android:radius="14dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/lego_color_yellow"
                android:startColor="@color/lego_color_yellow_800"
                android:type="linear" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</ripple>
