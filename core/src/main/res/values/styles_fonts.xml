<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat" >
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="AppTheme.TextAppearance.Heading1">
        <item name="android:textSize">44sp</item>
        <item name="android:fontFamily">?font_montserrat_extra_bold</item>
        <item name="lineHeight">54sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">#121212</item>
    </style>

    <style name="AppTheme.TextAppearance.Heading1.Inverse">
        <item name="android:textSize">44sp</item>
        <item name="android:fontFamily">?font_montserrat_extra_bold</item>
        <item name="lineHeight">54sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/lego_color_white</item>
    </style>

    <style name="AppTheme.TextAppearance.Heading2">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">?font_montserrat_extra_bold</item>
        <item name="lineHeight">40sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/lego_color_black</item>
    </style>

    <style name="AppTheme.TextAppearance.Heading2.Inverse">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">?font_montserrat_extra_bold</item>
        <item name="lineHeight">40sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/lego_color_white</item>
    </style>

    <style name="AppTheme.TextAppearance.Heading3">
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">?font_montserrat_extra_bold</item>
        <item name="lineHeight">32sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/lego_color_black</item>
    </style>

    <style name="AppTheme.TextAppearance.Heading4">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font_montserrat_extra_bold</item>
        <item name="lineHeight">28sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/lego_color_black</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle1">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font_montserrat_medium</item>
